<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navHostFragment">


    <fragment
        android:id="@+id/navHostFragment"
        android:name="com.xxm.jetpackdemo.ui.fragment.NavHostFragment"
        android:label="fragment_nav_host"
        tools:layout="@layout/fragment_nav_host">

        <action
            android:id="@+id/next_action"
            app:destination="@+id/firstFragment"
            app:enterAnim="@anim/common_slide_in_right"
            app:exitAnim="@anim/common_slide_out_left"
            app:popEnterAnim="@anim/common_slide_in_left"
            app:popExitAnim="@anim/common_slide_out_right"/>
    </fragment>

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.xxm.jetpackdemo.ui.fragment.FirstFragment"
        android:label="fragment_first"
        tools:layout="@layout/fragment_first">

        <argument
            android:name="flowStepNum"
            app:argType="integer"
            android:defaultValue="1"/>

        <action
            android:id="@+id/next_action"
            app:destination="@+id/secondFragment"
            app:enterAnim="@anim/common_slide_in_right"
            app:exitAnim="@anim/common_slide_out_left"
            app:popEnterAnim="@anim/common_slide_in_left"
            app:popExitAnim="@anim/common_slide_out_right"/>
    </fragment>

    <fragment
        android:id="@+id/secondFragment"
        android:name="com.xxm.jetpackdemo.ui.fragment.SecondFragment"
        android:label="fragment_second"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/next_action"
            app:popUpTo="@id/navHostFragment"/>
    </fragment>

    <fragment
        android:id="@+id/settingFragment"
        android:name="com.xxm.jetpackdemo.ui.fragment.SettingFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting"/>


</navigation>